<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/google_img"
               android:scaleType="centerCrop"
               android:contentDescription="@string/google_img"
    />

    <ImageView android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/background_gradient"
               android:scaleType="centerCrop"
               android:contentDescription="@string/gradient_background"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center">


        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/users_forms"
                  android:textColor="@color/white"
                  android:textSize="28sp"
                  android:textAlignment="center"
                  android:layout_marginTop="80dp"
        />

        <LinearLayout android:layout_width="150dp"
                      android:layout_height="6dp"
                      android:background="@color/white"
                      android:layout_marginTop="10dp"
        />

        <EditText android:layout_width="300dp"
                  android:layout_height="wrap_content"
                  android:background="@drawable/input_bg"
                  android:hint="Ingresa tu nombre"
                  android:autofillHints="xd"
                  android:inputType="text"
                  android:layout_marginTop="30sp"
        />

        <EditText android:layout_width="300dp"
                  android:layout_height="wrap_content"
                  android:background="@drawable/input_bg"
                  android:hint="Ingresa tu edad"
                  android:autofillHints="xd"
                  android:inputType="text"
                  android:layout_marginTop="30sp"
        />

        <EditText android:layout_width="300dp"
                  android:layout_height="wrap_content"
                  android:background="@drawable/input_bg"
                  android:hint="Ingresa tu correo"
                  android:autofillHints="xd"
                  android:inputType="textEmailAddress"
                  android:layout_marginTop="30sp"
        />

        <Button android:id="@+id/submit_btn"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:text="Enviar"
                android:layout_marginTop="40sp"
                android:paddingVertical="10sp"
        />

    </LinearLayout>

</RelativeLayout>
