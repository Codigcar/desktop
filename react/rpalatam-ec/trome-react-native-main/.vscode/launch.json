{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "Depor Android",
      "cwd": "${workspaceFolder}",
      "type": "reactnative",
      "request": "launch",
      "runArguments": ["--appIdSuffix=depor.dev", "--tasks=installDeporDebug"],
      "platform": "android",
      "envFile": "${workspaceFolder}/build.env"
    },
    {
      "name": "Depor iOS",
      "cwd": "${workspaceFolder}",
      "type": "reactnative",
      "request": "launch",
      "runArguments": ["--scheme=Depor", "--configuration=Debug"],
      "platform": "ios"
    },
