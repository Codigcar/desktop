<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="@dimen/dimen4"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="@dimen/dimen4">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen16"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/signika_semibold"
                android:gravity="center_vertical"
                android:text="Luis Cornejo"
                android:textColor="@color/black"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/positionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/signika_semibold"
                android:text="Gerente"
                android:textColor="@color/login_texto_plomo"
                android:textSize="@dimen/text14" />

            <LinearLayout
                android:id="@+id/cellphoneConstraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen8"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ic_cellphone_oval" />

                <TextView
                    android:id="@+id/cellphoneText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/signika_light"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:maxLines="1"
                    android:padding="@dimen/dimen4"
                    android:text="+51 980 839 494" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/telefonoConstraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ic_telf_oval" />

                <TextView
                    android:id="@+id/telfText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:lines="1"
                    android:fontFamily="@font/signika_light"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen4"
                    android:text="+51 980 839 494" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/emailConstraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ic_email_oval" />

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:lines="1"
                    android:fontFamily="@font/signika_light"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen4"
                    android:text="+51 980 839 494" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view13"
            android:layout_width="0.7dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dimen20"
            app:layout_constraintBottom_toTopOf="@+id/iconRecycler"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/iconRecycler"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen12"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dimen16"
            app:layout_constraintBottom_toTopOf="@+id/iconRecycler"
            app:layout_constraintEnd_toStartOf="@+id/view13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>